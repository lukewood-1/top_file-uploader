generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("prisma_provider_url")
}

model Session {
  id String @id
  sid String @unique
  data String
  expiresAt DateTime
}

model User {
  id Int @id @default(autoincrement())
  username String @db.VarChar(255) @unique
  password String @db.VarChar(255) @unique

  files File[]
}

model File {
  id Int @id @default(autoincrement())
  file Bytes

  owner Int 
  userId User @relation(fields: [owner], references: [id])
}